{
  ":name": "DeGrowLab.com",
  ":description": "This is the CMS model for de-grow-lab. It is found in the directory of the 'target' branch in the git repository.",
  ":custom-types": {
    "rich-text": {
      ":title": "Rich Text",
      ":description": "Text that can contain formatting",
      ":type": "object",
      "body": {
        ":title": "Body",
        ":type": "string"
      }
    },
    "heading": {
      ":title": "Heading",
      ":description": "Basic heading component",
      ":type": "object",
      "title": {
        ":title": "Title",
        ":type": "string"
      }
    },
    "uploadcare-image": {
      ":title": "Image (uploadcare.com)",
      ":type": "object",
      "alt": {
        ":title": "Alternative name",
        ":type": "string"
      },
      "src": {
        ":title": "Source",
        ":type": "string"
      },
      "supportedTypes": {
        ":title": "Supported Types",
        ":type": "array",
        ":items": {
          ":title": "Image Type",
          ":type": "string"
        }
      },
      "width": {
        ":title": "Width",
        ":type": "string"
      },
      "height": {
        ":title": "Height",
        ":type": "string"
      }
    }
  },
  "navigation": {
    ":title": "Navigation",
    ":type": "object",
    "title": {
      ":title": "Title",
      ":type": "string",
      ":placeholer": "Title Text"
    },
    "homePath": {
      ":title": "Home path",
      ":type": "string",
      ":placeholer": "Home path"
    },
    "colors": {
      ":title": "Navigation colors",
      ":type": "array",
      ":display-key": "path",
      ":items": {
        "path": {
          ":title": "Path",
          ":type": "string",
          ":placeholder": "/path/location"
        },
        "color": {
          ":title": "Color",
          ":type": "string",
          ":placeholder": "softGreen, softBlue, softPink ..."
        }
      }
    },
    "options": {
      ":title": "Navigation Options",
      ":type": "array",
      ":display-key": "label",
      ":items": {
        "label": {
          ":title": "Label",
          ":type": "string",
          ":placeholder": "Text label"
        },
        "path": {
          ":title": "Path",
          ":type": "string",
          ":placeholder": "/path/location"
        },
        "target": {
          ":title": "Target (optional)",
          ":type": "string",
          ":placeholder": "eg. blank"
        },
        "items": {
          ":title": "Items (Children)",
          ":type": "array",
          ":display-key": "label",
          ":items": {
            "label": {
              ":title": "Label",
              ":type": "string",
              ":placeholder": "Text label"
            },
            "path": {
              ":title": "Path",
              ":type": "string",
              ":placeholder": "/path/location"
            },
            "target": {
              ":title": "Target (optional)",
              ":type": "string",
              ":placeholder": "eg. blank"
            }
          }
        }
      }
    }
  },
  "pages": {
    ":title": "Pages",
    ":description": "A data object for each page",
    ":type": "array",
    ":display-key": "slug",
    ":items": {
      "slug": {
        ":title": "Slug",
        ":type": "string",
        ":placeholder": "id-for-page"
      },
      "seo": {
        ":title": "SEO",
        ":type": "object",
        "title": {
          ":type": "string"
        },
        "description": {
          ":type": "string"
        }
      },
      "blocks": {
        ":title": "Blocks",
        ":type": "arrayOf",
        ":display-key": "slug",
        ":items": ["rich-text", "heading", "uploadcare-image"]
      }
    }
  },
  "footer": {
    ":title": "Footer",
    ":description": "Footer for website",
    ":type": "object",
    "title": {
      ":title": "Title",
      ":type": "string",
      ":placeholder": "Title for footer"
    }
  }
}
